<h1>Listing rooms</h1>

<table>
  <thead>
    <tr>
      <th>Room number</th>
      <th>Building</th>
      <th>Size</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_number %></td>
        <td><%= room.building %></td>
        <td><%= room.size %></td>
        <td><%= room.status %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if session[:role] == "admin" %>
    <%= link_to 'Add New Room', new_room_path %>
    <%= link_to 'Back', admins_homepage_path %>
<%end%>
