<h1>Listing members</h1>
<% if flash.notice %>
    <div class="error"><%= flash[:notice] %></div>
    <% flash.clear %>
<% end %>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= link_to 'Booking History', members_pastReservations_path(email_param: member.email) %></td>
        <td><%= link_to 'Current/Future Reservations', members_futureReservations_path(email_param: member.email) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if session[:role] == "admin" %>
    <%= link_to 'Back', admins_homepage_path %>
<%end%>

