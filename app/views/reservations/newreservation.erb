<h1>Create New reservation</h1>
<% if flash.notice %>
    <div id="error"><%=flash[:notice]%></div>
<% end %>
<h2>Select building</h2>
<%= form_tag('/reservations/new', method: "post") do %>
  <%= select_tag(:building, options_for_select([["D.H.Hill", "D.H.Hill"],['Hunt', 'James. B. Hunt']], 'James. B. Hunt')) %>
  <%= submit_tag("Submit") %>
<% end %>
<% if session[:role] == "admin" %>
    <%= link_to 'Back', admins_homepage_path %>
<%else%>
    <%= link_to 'Back', members_homepage_path%>
<%end%>